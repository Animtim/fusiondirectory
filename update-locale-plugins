#!/bin/bash

BUILD_DIR="/home/benoit/develop/build-package/"
SRC_DIR="fusiondirectory-debian-build/src/"
PLUGIN_DIR="fusiondirectory-plugins"
CORE_DIR="fusiondirectory"

## DONT CHANGE ANYTHING AFTER THIS LINE ##

echo 'this will update the locales of all the plugins situated in '$BUILD_DIR$SRC_DIR$PLUGIN_DIR

cd $BUILD_DIR$SRC_DIR/$PLUGIN_DIR

for locale in `ls -1`; 
do cd $locale; $BUILD_DIR$SRC_DIR$CORE_DIR/update-locale; cd ..;
done

